    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: OTVision GUI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/view.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Detect",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/detect.py",
            "args": [
                "--path",
                "tests/data/Testvideo_Cars-Cyclist_FR20_2020-01-01_00-00-00.mp4",
                "--filetypes",
                "mp4",
                "--weights",
                "yolov5s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Track",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/track.py",
            "args": [
                "--paths",
                "tests/data/Testvideo_Cars-Cyclist_FR20_2020-01-01_00-00-00.otdet",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
